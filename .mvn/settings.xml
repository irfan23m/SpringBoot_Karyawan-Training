<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.1.0 http://maven.apache.org/xsd/settings-1.1.0.xsd">

	<mirrors>
		<mirror>
			<id>pegadaian-maven</id>
			<name>pegadaian-maven</name>
			<url>http://artifactory.pegadaian.co.id:8081/repository/pegadaian-maven/</url>
			<mirrorOf>*</mirrorOf>
		</mirror>
	</mirrors>
 	<servers>
		<server>
			<id>pegadaian-maven</id>
			<username>${MAVEN_REPO_USER}</username>
			<password>${MAVEN_REPO_PASS}</password>
		</server>
	</servers>
	<profiles>
		<profile>
			<id>allow-snapshot</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<repositories>
				<repository>
					<id>nexus-pegadaian</id>
					<url>http://artifactory.pegadaian.co.id:8081/repository/pegadaian-maven/</url>
					<releases>
						<enabled>true</enabled>
					</releases>
					<snapshots>
						<enabled>true</enabled>
					</snapshots>
				</repository>
			</repositories>
		</profile>
	</profiles>

</settings>
